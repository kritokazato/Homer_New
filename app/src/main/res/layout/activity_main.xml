<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <WebView
        android:id="@+id/webviewactivity_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button"
        android:background="@drawable/electricity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button2"
        android:background="@drawable/incometax"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button3"
        android:background="@drawable/propertytax"
        android:layout_alignTop="@+id/webviewactivity_webview"
        android:layout_alignEnd="@+id/webviewactivity_webview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button4"
        android:background="@drawable/watertax"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button"
        android:layout_alignTop="@+id/button2"
        android:layout_alignBottom="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Via Electricity"
        android:id="@+id/textView"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Via PropertyTax"
        android:id="@+id/textView2"
        android:layout_above="@+id/button4"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Via Income Tax"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignBottom="@+id/webviewactivity_webview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Via WaterTax"
        android:id="@+id/textView4"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/webviewactivity_webview"
        android:layout_marginTop="45dp"
        android:layout_alignStart="@+id/button4"
        android:layout_alignBottom="@+id/webviewactivity_webview" />
</RelativeLayout>
